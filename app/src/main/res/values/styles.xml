<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color Theme Definitions -->
        <!-- https://material.io/develop/android/theming/color/ -->

        <!-- Color Tool -->
        <!-- https://material.io/tools/color/#!/?view.left=0&view.right=0&primary.color=D32F2F&secondary.color=1976D2 -->
        <!-- Export to get colors created -->

        <!-- The color displayed most frequently across your app’s screens and components. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- A lighter/darker variant of your primary brand color, used sparingly in theming -->
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <!-- The color used for elements displayed on top of your primary colors (eg. Text and icons, often white or semi-transparent black depending on accessibility) -->
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- The secondary brand color of your app, used mostly as an accent for certain widgets that need to stand out -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <!-- A lighter/darker variant of your secondary brand color, used sparingly in theming -->
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <!-- The color used for elements displayed on top of your secondary colors -->
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- The color used for errors (often a shade of red) -->
        <item name="colorError">@color/colorError</item>
        <!-- The color used for elements displayed on top of your error color -->
        <item name="colorOnError">@color/colorOnError</item>
        <!-- The color used for surfaces (i.e. Material “sheets”) -->
        <item name="colorSurface">@color/colorSurface</item>
        <!-- The color used for elements displayed on top of your surface color -->
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- The color used for elements displayed on top of your background color -->
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!-- The color behind all other screen content -->
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- The color above the App (where the clock and battery icons are) -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>

        <!-- The color below the App (where the clock and battery icons are) -->
<!--        <item name="android:navigationBarColor">@android:color/holo_orange_light</item>-->

    </style>

    <!-- ActionBar / ToolBar -->
    <style name="MainToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation">4dp</item>
        <item name="popupTheme">@style/Theme.MaterialComponents.DayNight.NoActionBar</item>
    </style>

    <!-- Lists -->
    <style name="ListItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item> <!-- background will not highlight when row is tapped without this -->
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="ListItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <!-- Text -->
    <style name="DefaultTextField">
        <!-- prevent full-screen edit when phone in landscape -->
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>
</resources>
